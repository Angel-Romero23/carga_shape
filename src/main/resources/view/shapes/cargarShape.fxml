<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" fx:controller="controller.controllerShape">
    <HBox spacing="15" alignment="CENTER">
        <ComboBox fx:id="comboBD" promptText="Selecciona una base de datos" prefWidth="200"/>
        <TextField fx:id="campoUsuario" promptText="Usuario" prefWidth="200"/>
        <PasswordField fx:id="campoPass" promptText="Contraseña" prefWidth="200"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Seleccionar carpeta" onAction="#listaArchivos" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
        <Button text="Cargar Shapes" onAction="#cargarSeleccionados" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"/>
        <Button text="Cargar Todos Shapes" onAction="#cargarTodos" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;"/>
    </HBox>
    <TableView fx:id="tablaArchivos" style="-fx-background-color: #f0f8ff; -fx-table-cell-border-color: #cccccc;">
        <columns>
            <TableColumn fx:id="colSeleccionado" text="Seleccionar" prefWidth="100"/>
            <TableColumn fx:id="colNombre" text="Nombre del Archivo" prefWidth="200"/>
            <TableColumn fx:id="colTamanio" text="Tamaño (bytes)" prefWidth="100"/>
            <TableColumn fx:id="colRuta" text="Ruta completa" prefWidth="400"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>
</VBox>
